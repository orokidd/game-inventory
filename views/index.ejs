<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="filters">
        <form action="/" method="GET">
            <label for="developer">Filter by Developer:</label>
            <select name="developer" id="developer" onchange="clearOtherFilter('genre'); this.form.submit()">
                <option value="">All Developers</option>
                <% developers.forEach(dev => { %>
                    <option value="<%= dev.name %>" <%= selectedDeveloper === dev.name ? 'selected' : '' %>>
                        <%= dev.name %>
                    </option>
                <% }); %>
            </select>

            <label for="genre">Filter by Genre:</label>
            <select name="genre" id="genre" onchange="clearOtherFilter('developer'); this.form.submit()">
                <option value="">All Genres</option>
                <% genres.forEach(gen => { %>
                    <option value="<%= gen.name %>" <%= selectedGenre === gen.name ? 'selected' : '' %>>
                        <%= gen.name %>
                    </option>
                <% }); %>
            </select>
            
            <% if (selectedDeveloper || selectedGenre) { %>
                <a href="/">Clear Filters</a>
            <% } %>
        </form>
    </div>

    <script>
        function clearOtherFilter(filterName) {
            document.getElementById(filterName).value = '';
        }
    </script>

    <div class="table">
        <div class="header">
            <div class="col">Game</div>
            <div class="col">Developer</div>
            <div class="col">Genre</div>
            <div class="col">Actions</div>
        </div>
        <% games.forEach(game => { %>
            <div class="data">
                <div class="col"><%= game.title %></div>
                <div class="col"><%= game.developer %></div>
                <div class="col"><%= Array.isArray(game.genres) ? game.genres.join(', ') : game.genres %></div>
                <div class="col"><a href="">Edit</a> <a href="">Del</a></div>
            </div>
        <% }); %>
    </div>
</body>
</html>